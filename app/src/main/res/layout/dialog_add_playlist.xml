<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottom_control">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:text="@string/imput_playlist_name"
        android:textColor="@color/colorText"
        app:layout_constraintStart_toStartOf="@id/dialog_add_playlist_et_name"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/dialog_add_playlist_et_name"
        style="@style/Widget.AppCompat.Light.AutoCompleteTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/colorText"
        android:textColorHighlight="@color/colorText"
        android:textColorHint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/dialog_add_playlist_bt_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bt_oval_click"
        android:text="@string/button_ok"
        android:textColor="@color/colorText"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_add_playlist_bt_cancel"
        app:layout_constraintEnd_toStartOf="@+id/dialog_add_playlist_bt_cancel"
        app:layout_constraintTop_toTopOf="@+id/dialog_add_playlist_bt_cancel" />

    <Button
        android:id="@+id/dialog_add_playlist_bt_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bt_oval_click"
        android:text="@string/button_cancel"
        android:textColor="@color/colorText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/dialog_add_playlist_et_name"
        app:layout_constraintTop_toBottomOf="@+id/dialog_add_playlist_et_name" />

</androidx.constraintlayout.widget.ConstraintLayout>
